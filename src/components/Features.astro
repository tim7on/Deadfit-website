---
// src/components/Features.astro
---

<section id='features' class='py-20 px-4'>
	<div class='max-w-6xl mx-auto'>
		<div class='text-center'>
			<h2 class='text-4xl font-bold tracking-tighter'>
				Features You'll Love
			</h2>
			<p class='mt-2 text-lg text-gray-400'>
				Everything you need to stay on track.
			</p>
		</div>

		<div class='mt-16 grid grid-cols-1 md:grid-cols-3 gap-8'>
			<!-- Feature Card 1 -->
			<div
				class='feature-card bg-zinc-200/50 p-8 rounded-2xl border border-white/10'
			>
				<h3 class='text-2xl font-bold'>Workout Tracking</h3>
				<p class='mt-2 text-black/50'>
					Log every set, rep, and weight with an intuitive and fast
					interface.
				</p>
			</div>
			<!-- Feature Card 2 -->
			<div
				class='feature-card bg-zinc-200/50 p-8 rounded-2xl border border-white/10'
				style='--delay: 0.1s;'
			>
				<h3 class='text-2xl font-bold'>Progress Analytics</h3>
				<p class='mt-2 text-black/50'>
					Visualize your gains with beautiful charts and historical
					data.
				</p>
			</div>
			<!-- Feature Card 3 -->
			<div
				class='feature-card bg-zinc-200/50 p-8 rounded-2xl border border-white/10'
				style='--delay: 0.2s;'
			>
				<h3 class='text-2xl font-bold'>Custom Routines</h3>
				<p class='mt-2 text-black/50'>
					Build and save your own workout plans for any fitness goal.
				</p>
			</div>
		</div>
	</div>
</section>
