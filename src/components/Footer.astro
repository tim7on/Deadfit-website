---
// src/components/Footer.astro
const currentYear = new Date().getFullYear()
---

<footer class='border-t border-white/10 mt-20'>
	<div
		class='max-w-6xl mx-auto px-4 py-8 flex flex-col sm:flex-row justify-between items-center gap-4'
	>
		<p class='text-sm text-gray-400'>
			&copy; {currentYear} Deadfit. All rights reserved.
		</p>
		<div class='flex items-center gap-6'>
			<a
				href='/Deadfit-website/terms-of-service'
				class='text-sm text-gray-400 hover:text-white transition-colors duration-300'
			>
				Terms of Service
			</a>
			<a
				href='/Deadfit-website/privacy-policy'
				class='text-sm text-gray-400 hover:text-white transition-colors duration-300'
			>
				Privacy Policy
			</a>
		</div>
	</div>
</footer>
