---
// src/components/Hero.astro
import { appName } from '../consstants/info'
---

<section
	class='relative h-screen flex items-center justify-center text-center overflow-hidden'
>
	<!-- Background Glow -->
	<div
		class='absolute top-1/2 left-1/2 w-1/2 h-1/2 bg-indigo-600/30 rounded-full -translate-x-1/2 -translate-y-1/2 blur-3xl opacity-50'
	>
	</div>

	<div class='relative z-10 px-4'>
		<h1
			class='text-5xl md:text-7xl font-bold tracking-tighter bg-clip-text text-transparent bg-gradient-to-b from-black to-black/70'
		>
			Meet {appName}
		</h1>
		<p class='mt-4 text-lg md:text-xl max-w-2xl mx-auto text-black/50'>
			Your ultimate fitness companion. Track workouts, crush goals, and
			unleash your potential with a killer interface.
		</p>
		<div class='mt-8 flex justify-center gap-4'>
			<a
				href='#download'
				class='bg-indigo-600 hover:bg-indigo-500 text-white font-semibold py-3 px-6 rounded-lg transition-transform duration-300 hover:scale-105'
			>
				Get the App
			</a>
			<a
				href='#features'
				class='bg-gray-700/50 hover:bg-gray-700/80 text-white font-semibold py-3 px-6 rounded-lg transition-transform duration-300 hover:scale-105'
			>
				Learn More
			</a>
		</div>
	</div>
</section>
